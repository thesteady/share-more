<%= simple_form_for @author do |f| %>
  <%= f.input :username %>
  <%= f.input :email, placeholder: 'user@domain.com' %>
  <%= f.input :password, required: true, placeholder: 'No special characters.' %>
  <%= f.input :password_confirmation, required: true, placeholder: 'No special characters.' %>
  <%= f.button :submit %>
<% end %>

