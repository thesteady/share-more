<%= simple_form_for(@article, :html => {:multipart => true, :class => 'form-vertical'}) do |f| %>
  <%= f.input_field :title, :placeholder => "Article Title...", class: "pull-left" %>
  <%= f.input_field :tag_list, :placeholder => "Comma Separated Tag List", class: "pull-left" %>
  <%= f.button :submit, "Publish Article", class: "btn btn-info pull-left" %>
  <%= f.input :body, input_html: {"ace-editor" => "", "ace-mode" => "markdown", "ace-theme" => "github", class: "span8", style: "height: 300px;"} %>
  <% if @article.image_file_name %>
    <%= image_tag @article.image.url %><br/>
  <% end %>
  <%= f.input :image %>
<% end %>
